<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="All tasks" verbose="1" parallel="methods">
    <test name="Regression tests for task1">
        <groups>
            <run>
                <include name="smoke_test"/>
            </run>
        </groups>
        <packages>
            <package name="mentoring.task1"/>
        </packages>
    </test>
    <test name="ChromeTest for task 2">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="mentoring.task2.LoginToSchedulerConsoleTest"/>
            <class name="mentoring.task2.PayrollJobRunOnClientLevelTest"/>
            <class name="mentoring.task2.PayrollJobRunOnPayrollGroupLevelTest"/>
