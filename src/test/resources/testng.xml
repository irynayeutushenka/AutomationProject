        <classes>
            <class name="mentoring.task2.LoginToSchedulerConsoleTest"/>
             <class name="mentoring.task2.PayrollJobRunOnClientLevelTest"/>
             <class name="mentoring.task2.PayrollJobRunOnPayrollGroupLevelTest"/>
